@model CarProjectIIS.Models.Caritems.CarItemDeleteViewModel
@section title {
    <h1>Deletes</h1>
}
<h1>Delete</h1>


<div>

    <h4>Spaceship</h4>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => Model.Id)

        </div>

        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => Model.Name)

        </div>

        <div class="form-group row">
            <label asp-for="ShortDesc" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => Model.ShortDesc)

        </div>

        <div class="form-group row">
            <label asp-for="LongDesc" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => Model.LongDesc)

        </div>

        <div class="form-group row">
            <label asp-for="Price" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => Model.Price)

        </div>

        <div class="form-group row">
            <label asp-for="isFavorite" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => Model.isFavorite)

        </div>

        <div class="form-group row">
            <label asp-for="available" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => Model.available)

        </div>



        <div class="form-group row">
            <label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => Model.CreatedAt)

        </div>

        <div class="form-group row">
            <label asp-for="UpdatedAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => Model.UpdatedAt)

        </div>

        @foreach (var images in Model.ImageToDatabase)
        {
            <partial name="_Images" model="images" />
        }

    </dl>
    </hr>
    <form asp-action="DeleteConfirmation" asp-route-id="@Model.Id">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="index" class="btn btn-pimary">Back</a>
    </form>


</div>